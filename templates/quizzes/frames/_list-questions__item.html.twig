<li class="question-list list-group-item list-group-item-action {{ currentQuestion.id == item.id ? 'list-group-item-primary' : (item.answers.count() > 0 ? 'list-group-item-success' : '') }}">
    <div class="w-100">
        <div class="markdown-compact">
            <div class="actions float-end">
                <a href="#" class="text-muted text-hover-primary">
                    <i class="ri-pencil-line"></i>
                </a>
                <a href="#" class="text-muted text-hover-danger">
                    <i class="ri-delete-bin-2-line"></i>
                </a>
            </div>
            <a id="question-{{ item.id }}"
               href="{{ path('go_through_quiz', app.request.query | merge({quiz: currentQuestion.quiz.id, question: item.id})) ~ '#question-' ~ item.id }}"
               data-turbo-action="advance"
               data-turbo-frame="page-content">
                {{ item.value | markdown_to_html }}
            </a>
        </div>
        <small class="text-muted">{{ item.answers.count() }} answers</small>
    </div>
</li>
