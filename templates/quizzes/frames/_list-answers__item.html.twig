<div class="border-start border-3 border-success p-2 ps-3 mb-2 answer-item">
    <small class="text-muted">
        <b>{{ answer.author.username }}</b> answered it on {{ answer.createdAt.format('Y-m-d') }}
        <a href="#answer-{{ answer.id }}" data-turbo="false">#{{ answer.id }}</a>
    </small>
    <div class="actions float-end">
        <a href="{{ path('answer_edit', {question: answer.question.id, answer: answer.id}) }}"
           data-turbo-action="advance"
           class="text-muted text-hover-primary"
        >
            <i class="ri-pencil-line"></i>
        </a>
        <a href="{{ path('answer_delete', {question: answer.question.id, answer: answer.id}) }}"
           data-turbo-confirm="Are you sure you want to delete answer '{{ answer.id }}'?"
           data-turbo-method="DELETE"
           class="text-muted text-hover-danger">
            <i class="ri-delete-bin-2-line"></i>
        </a>
    </div>

    {% if answer.value is not empty %}
        <div class="mt-2">{{ answer.value | markdown_to_html }}</div>
    {% else %}
        <div class="mt-2">
            <small class="text-muted"><i> -- Empty response -- </i></small>
        </div>
    {% endif %}
</div>
