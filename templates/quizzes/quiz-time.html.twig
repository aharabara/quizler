{% extends 'layouts/base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-6 col-sm-12 order-sm-2 order-lg-0">
            <h5>Quiz questions</h5>

            <div class="form-questions mb-3">
                {% include 'CRUD/question/frames/_form.html.twig' with {question: currentQuestion} %}
            </div>

            <div class="list-questions--filters d-flex justify-content-end">
                {% include 'quizzes/frames/_list-questions__filters.html.twig' %}
            </div>

            <div class="list-questions">
                {% include 'quizzes/frames/_list-questions.html.twig' with {questions: questions, currentQuestion: currentQuestion} %}
            </div>
        </div>

        <div class="col-sm-12 border-top border-2 border-secondary d-sm-block d-lg-none order-sm-1 mb-5 mt-5"></div>

        <div class="col-lg-6 col-sm-12 order-sm-0 order-lg-1">
            <div class="form-question">
                {% if not currentQuestion.id %}
                    <h5>Ask more!</h5>
                    <p class="text-center text-muted">There is no questions selected</p>
                {% else %}
                    {% include 'quizzes/frames/_form-answer.html.twig' with {question : currentQuestion, answer : currentAnswer} %}
                {% endif %}
            </div>

            <div class="list-answers mt-4">
                {% include 'quizzes/frames/_list-answers.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
